@model TargetAPI_Web.Models.Dto.TargetAPICreateDto

<form asp-action="CreateTargetAPI">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create TargetApi</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="col-2">
                <label asp-for="Url" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <br />
            <div class="col-2">
                <label asp-for="MonitoringInterval" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MonitoringInterval" class="form-control" />
                <span asp-validation-for="MonitoringInterval" class="text-danger"></span>
            </div>
            <br />
            <div class="col-5 offset-2">
                <a asp-action="IndexTargetAPI" asp-controller="TargetAPI" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

