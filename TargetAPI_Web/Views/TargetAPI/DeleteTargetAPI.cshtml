@model TargetAPI_Web.Models.Dto.TargetAPIDto

<form asp-action="DeleteTargetAPI">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete TargetApi</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <br />
            <div class="col-2">
                <label asp-for="Url" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Url" disabled class="form-control" />
            </div>
            <br />
            <div class="col-2">
                <label asp-for="MonitoringInterval" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MonitoringInterval" disabled class="form-control" />
            </div>
            <br />
            <div class="col-5 offset-2">
                <a asp-action="IndexTargetAPI" asp-controller="TargetAPI" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

